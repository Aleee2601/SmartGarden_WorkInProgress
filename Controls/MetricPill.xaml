<?xml version="1.0" encoding="utf-8" ?>
<Frame xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="SmartGarden_WorkInProgress.Controls.MetricPill"
       x:Name="this"
       BackgroundColor="{StaticResource ColorSurface}"
       Padding="16"
       CornerRadius="20"
       HasShadow="True">
    <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="4">
        <!-- Icon + Label -->
        <HorizontalStackLayout Grid.Row="0" Spacing="8">
            <Label Text="{Binding Icon, Source={x:Reference this}}"
                   FontFamily="MaterialSymbols"
                   FontSize="18"
                   TextColor="{StaticResource ColorSubtle}"
                   VerticalOptions="Center" />
            <Label Text="{Binding Label, Source={x:Reference this}}"
                   FontSize="12"
                   TextColor="{StaticResource ColorSubtle}"
                   VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Value + Unit -->
        <HorizontalStackLayout Grid.Row="1" Spacing="2">
            <Label Text="{Binding Value, Source={x:Reference this}}"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource ColorText}"
                   VerticalOptions="Center" />
            <Label Text="{Binding Unit, Source={x:Reference this}}"
                   FontSize="16"
                   TextColor="{StaticResource ColorText}"
                   VerticalOptions="Center" />
        </HorizontalStackLayout>

        <!-- Caption -->
        <Label Grid.Row="2"
               Text="{Binding Caption, Source={x:Reference this}}"
               FontSize="11"
               TextColor="{StaticResource ColorSubtle}" />
    </Grid>
</Frame>
