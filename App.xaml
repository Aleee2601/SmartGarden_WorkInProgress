<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:SmartGarden_WorkInProgress.Converters"
             x:Class="SmartGarden_WorkInProgress.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <converters:PercentToBarHeightConverter x:Key="PercentToBarHeightConverter" />
            <converters:BoolToOpacityConverter x:Key="BoolToOpacityConverter" />
            <converters:LessThanToBoolConverter x:Key="LessThanToBoolConverter" />

            <!-- Font Families -->
            <OnPlatform x:Key="MaterialSymbols" x:TypeArguments="x:String">
                <On Platform="Android" Value="MaterialSymbolsOutlined.ttf#Material Symbols Outlined" />
                <On Platform="iOS" Value="MaterialSymbolsOutlined" />
            </OnPlatform>

        </ResourceDictionary>
    </Application.Resources>
</Application>
