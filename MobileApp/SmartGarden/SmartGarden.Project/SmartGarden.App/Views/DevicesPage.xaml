<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:SmartGarden.App.ViewModels"
             xmlns:dto="clr-namespace:SmartGarden.Core.DTOs;assembly=SmartGarden.Core"
             x:Class="SmartGarden.App.Views.DevicesPage"
             x:DataType="viewmodel:DevicesViewModel"
             Title="{Binding Title}">

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding RefreshDevicesCommand}">

        <CollectionView ItemsSource="{Binding Devices}">

            <CollectionView.EmptyView>
                <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Padding="20">
                    <Label Text="ðŸ“±"
                           FontSize="60"
                           HorizontalOptions="Center"/>
                    <Label Text="No devices registered"
                           FontSize="20"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           Margin="0,10,0,5"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="dto:DeviceResponseDto">
                    <Border Margin="15,10"
                           Padding="15"
                           Background="White"
                           Stroke="{StaticResource Gray200}"
                           StrokeThickness="1"
                           StrokeShape="RoundRectangle 10">

                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">

                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{Binding DeviceName}"
                                   FontSize="18"
                                   FontAttributes="Bold"/>

                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{Binding IsOnline, StringFormat='{0}'}"
                                   FontSize="12"
                                   Padding="8,4"
                                   BackgroundColor="{Binding IsOnline, Converter={StaticResource StatusToBrushConverter}}"
                                   TextColor="White"
                                   HorizontalOptions="End"
                                   VerticalOptions="Start">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsOnline}" Value="True">
                                        <Setter Property="Text" Value="ðŸŸ¢ Online"/>
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsOnline}" Value="False">
                                        <Setter Property="Text" Value="ðŸ”´ Offline"/>
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>

                            <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding PlantNickname, StringFormat='Plant: {0}'}"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray600}"
                                   Margin="0,5,0,0"
                                   IsVisible="{Binding PlantNickname, Converter={StaticResource StringIsNotNullOrEmptyConverter}}"/>

                            <Label Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                   Text="{Binding MacAddress, StringFormat='MAC: {0}'}"
                                   FontSize="12"
                                   TextColor="{StaticResource Gray600}"
                                   Margin="0,5,0,0"/>

                            <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Spacing="15" Margin="0,10,0,0">
                                <Label Text="{Binding BatteryLevel, StringFormat='ðŸ”‹ {0}%'}"/>
                                <Label Text="{Binding SignalStrength, StringFormat='ðŸ“¶ {0} dBm'}"/>
                            </HorizontalStackLayout>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </RefreshView>

</ContentPage>
