<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Typography Styles -->
    <Style x:Key="TitleStyle" TargetType="Label">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource ColorText}" />
    </Style>

    <Style x:Key="H2Style" TargetType="Label">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource ColorText}" />
    </Style>

    <Style x:Key="BodyStyle" TargetType="Label">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{StaticResource ColorText}" />
    </Style>

    <Style x:Key="CaptionStyle" TargetType="Label">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="TextColor" Value="{StaticResource ColorSubtle}" />
    </Style>

    <!-- Button Styles -->
    <Style x:Key="ChipButtonStyle" TargetType="Frame">
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource ColorSurfaceAlt}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ColorSurfaceAlt}" />
    </Style>

    <Style x:Key="ChipButtonSelectedStyle" TargetType="Frame">
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HasShadow" Value="False" />
        <Setter Property="BorderColor" Value="{StaticResource ColorPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource ColorPrimary}" />
    </Style>

    <!-- Card Styles -->
    <Style x:Key="CardStyle" TargetType="Frame">
        <Setter Property="Padding" Value="16" />
        <Setter Property="CornerRadius" Value="24" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="BorderColor" Value="Transparent" />
        <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    </Style>

    <!-- Icon Styles -->
    <Style x:Key="IconStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="MaterialSymbols" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="TextColor" Value="{StaticResource ColorText}" />
        <Setter Property="VerticalOptions" Value="Center" />
    </Style>

    <!-- Page Styles -->
    <Style TargetType="ContentPage" ApplyToDerivedTypes="True">
        <Setter Property="BackgroundColor" Value="{StaticResource ColorSurface}" />
    </Style>

    <Style TargetType="ScrollView">
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

</ResourceDictionary>
