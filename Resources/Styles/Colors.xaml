<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Color Palette -->
    <Color x:Key="ColorPrimary">#1AA44B</Color>
    <Color x:Key="ColorPrimaryDark">#0E7A2B</Color>
    <Color x:Key="ColorAccent">#2CCB73</Color>
    <Color x:Key="ColorSurface">#FFFFFF</Color>
    <Color x:Key="ColorSurfaceAlt">#F3F4F6</Color>
    <Color x:Key="ColorText">#0F172A</Color>
    <Color x:Key="ColorSubtle">#64748B</Color>
    <Color x:Key="ColorDanger">#E11D48</Color>

    <!-- Gradient Brushes -->
    <LinearGradientBrush x:Key="GradientGreen" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#0E7A2B" Offset="0.0" />
        <GradientStop Color="#2DB34A" Offset="1.0" />
    </LinearGradientBrush>

    <!-- Dark Mode Colors (Optional) -->
    <Color x:Key="ColorSurfaceDark">#1E293B</Color>
    <Color x:Key="ColorSurfaceAltDark">#334155</Color>
    <Color x:Key="ColorTextDark">#F1F5F9</Color>

</ResourceDictionary>
